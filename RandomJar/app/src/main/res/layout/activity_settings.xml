<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.atsume.randomjar.settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/settings_text_0"
        android:text="Settings"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/settings_button3"
        android:layout_alignRight="@id/settings_button3"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:layout_below="@id/settings_text_0"
        android:id="@+id/settings_button1_help"
        android:text="Help"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/settings_button3"
        android:layout_alignRight="@id/settings_button3"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_below="@id/settings_button1_help"
        android:id="@+id/settings_button2_credits"
        android:text="Credits"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_below="@id/settings_button2_credits"
        android:id="@+id/settings_button3"
        android:text="Unused Button"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"/>


</RelativeLayout>
